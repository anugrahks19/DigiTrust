/* Dashboard Specific Styles */

/* Task List Container */
.task-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

/* Task Item Card */
.task-item {
    display: flex;
    align-items: center;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 16px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.5);
    position: relative;
    overflow: hidden;
}

.task-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.08), 0 4px 6px -2px rgba(0, 0, 0, 0.04);
}

/* Status Indicator Dot */
.task-status {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    margin-right: 1.25rem;
    flex-shrink: 0;
    position: relative;
}

.task-status::after {
    content: '';
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: 50%;
    opacity: 0.2;
    background: inherit;
}

.task-status.pending {
    background-color: #f59e0b;
    /* Orange/Amber */
}

.task-status.active {
    background-color: #34c759;
    /* Emerald/Green */
}

.task-status.completed {
    background-color: #10b981;
    /* Emerald/Green */
}

/* Task Info Typography */
.task-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.task-info h4 {
    font-size: 1rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0;
    font-family: 'Outfit', sans-serif;
}

.task-info p {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
}

/* Buttons */
.task-item .btn {
    padding: 0.6rem 1.25rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s;
}

/* Primary Action Button (Purple Gradient like "Navigate") */
.task-item .btn-primary {
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
    color: white;
    border: none;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
}

.task-item .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 16px rgba(99, 102, 241, 0.4);
}

.task-item .btn-primary:active {
    transform: translateY(0);
}

/* Secondary/Outline Button */
.task-item .btn-outline {
    background: transparent;
    border: 1px solid var(--primary);
    color: var(--primary);
}

.task-item .btn-outline:hover {
    border-color: var(--primary);
    background: rgba(255, 255, 255, 0.05);
    color: #e5e7eb;
}

/* Completed Task Styling */
.task-done {
    background: rgba(255, 255, 255, 0.6);
    box-shadow: none;
}

.task-done .task-info h4 {
    color: #9ca3af;
}

/* Dark Mode Overrides (if applicable) */
body.dark-mode .task-item {
    background: rgba(30, 41, 59, 0.8);
    border-color: rgba(255, 255, 255, 0.1);
}

body.dark-mode .task-info h4 {
    color: #f3f4f6;
}

body.dark-mode .task-info p {
    color: #9ca3af;
}

body.dark-mode .task-done {
    background: rgba(30, 41, 59, 0.4);
}

body.dark-mode .task-item .btn-outline {
    border-color: #374151;
    color: #9ca3af;
}

body.dark-mode .task-item .btn-outline:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #e5e7eb;
}

/* Dashboard Header */
.dashboard-header {
    display: grid;
    grid-template-columns: 1fr auto auto;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-light);
}

.dashboard-header p {
    color: var(--text-secondary);
}

/* User Badge */
.user-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.9rem;
    background: rgba(139, 92, 246, 0.12);
    border: 1px solid rgba(139, 92, 246, 0.25);
    border-radius: 16px;
    box-shadow: var(--shadow-sm);
    color: #4c1d95;

    .welcome-id {
        font-weight: 800;
        display: inline-block;
        padding: 4px 10px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.18);
        border: 1px solid rgba(255, 255, 255, 0.28);
        color: #fff;
    }

    /* Content Grid: Quick Actions + List */
    .dashboard-content-grid {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: var(--spacing-lg);
        margin-top: var(--spacing-lg);
    }

    .action-section,
    .list-section {
        padding: var(--spacing-lg);
        border-radius: var(--radius-xl);
    }

    .action-buttons {
        display: grid;
        gap: var(--spacing-sm);
    }

    /* KPI Cards */
    .kpi-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: var(--spacing-md);
        margin-top: var(--spacing-md);
    }

    .kpi-card {
        padding: var(--spacing-lg);
        border-radius: var(--radius-lg);
        transition: all var(--transition-base);
    }

    .kpi-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
    }

    .kpi-icon {
        width: 44px;
        height: 44px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        margin-bottom: 0.75rem;
    }

    .kpi-value {
        font-size: 2rem;
        font-weight: 900;
        font-family: var(--font-display);
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .kpi-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Page title weight */
    .page-title {
        font-size: 3rem;
        font-weight: 900;
        letter-spacing: -0.02em;
    }

    /* Loading State + Spinner */
    .loading-state {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
    }

    .spinner {
        width: 28px;
        height: 28px;
        border: 3px solid var(--border-light);
        border-top-color: var(--primary);
        border-radius: 50%;
        animation: spin 0.9s linear infinite;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Responsive */
    @media (max-width: 900px) {
        .dashboard-content-grid {
            grid-template-columns: 1fr;
        }
    }